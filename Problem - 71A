#include<stdio.h>
#include<string.h>
int main(){
    int n;
    scanf("%d",&n);
    for(int i=0;i<n;i++){
    char a[101];
    scanf("%s",a);
    int len=strlen(a);
    int tot=0;
    if(len<=10){
        printf("%s\n",a);
    }
        else if(len>10){
    tot = len-2;
    printf("%c%d%c\n",a[0],tot,a[len-1]);
        }
    
}
return 0;
}
